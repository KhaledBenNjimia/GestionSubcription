@model Client

@{
    ViewData["Title"] = "Edit Client";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit Client</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #121212; /* Dark background */
            color: white;
            text-align: center;
        }

        .container {
            margin-top: 50px;
        }

        .box {
            background: rgba(0, 0, 0, 0.6); /* Transparent box */
            padding: 30px;
            border-radius: 10px;
            width: 400px;
            margin: auto;
            text-align: center;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
        }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

        .btn-custom {
            background: #E50914;
            color: white;
            font-weight: bold;
            border: none;
            padding: 10px;
            border-radius: 5px;
            font-size: 16px;
            width: 100%;
        }

            .btn-custom:hover {
                background: #B20710;
            }
    </style>
</head>
<body>

    <div class="container">
        <h2>Edit Client</h2>

        <div class="box">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <input type="text" asp-for="Name" class="form-control" placeholder="Name" required />
                </div>

                <div class="mb-3">
                    <input type="text" asp-for="LastName" class="form-control" placeholder="Last Name" required />
                </div>

                <div class="mb-3">
                    <input type="email" asp-for="Email" class="form-control" placeholder="Email" required />
                </div>

                <div class="mb-3">
                    <input type="tel" asp-for="Tel" class="form-control" placeholder="Phone" required />
                </div>

                <div class="mb-3">
                    <input type="text" asp-for="Description" class="form-control" placeholder="Description" />
                </div>

                <button type="submit" class="btn btn-custom">Save Changes</button>
            </form>
        </div>
    </div>

</body>
</html>
