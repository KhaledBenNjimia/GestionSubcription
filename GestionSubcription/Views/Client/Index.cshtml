@model IEnumerable<Client>

@{
    ViewData["Title"] = "Clients";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Client Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #121212; /* Dark background */
            color: white;
            text-align: center;
        }

        .container {
            margin-top: 30px;
        }

        .box {
            background: rgba(0, 0, 0, 0.6); /* Transparent box */
            padding: 30px;
            border-radius: 10px;
            text-align: center;
            width: 100%;
            margin-bottom: 20px;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
        }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

        .btn-custom {
            background: #E50914;
            color: white;
            font-weight: bold;
            border: none;
            padding: 10px;
            border-radius: 5px;
            font-size: 16px;
        }

            .btn-custom:hover {
                background: #B20710;
            }
    </style>
</head>
<body>

    <div class="container">
        <h2>Client Management</h2>

        <!-- Add Client Box -->
        <div class="box">
            <h3>Add Client</h3>
            <form asp-action="Create" method="post">
                <input type="text" name="Name" class="form-control mb-2" placeholder="Name" required />
                <input type="text" name="LastName" class="form-control mb-2" placeholder="Last Name" required />
                <input type="email" name="Email" class="form-control mb-2" placeholder="Email" required />
                <input type="tel" name="Tel" class="form-control mb-2" placeholder="Phone" required />
                <input type="text" name="Description" class="form-control mb-2" placeholder="Description" />
                <button type="submit" class="btn btn-custom">Add</button>
            </form>
        </div>

        <!-- Edit Client Box -->
        <div class="box">
            <h3>Edit Client</h3>
            <form asp-action="Edit" method="get">
                <input type="number" name="id" class="form-control mb-2" placeholder="Enter Client ID" required />
                <button type="submit" class="btn btn-custom">Edit</button>
            </form>
        </div>

        <!-- Delete Client Box -->
        <div class="box">
            <h3>Delete Client</h3>
            <form asp-action="Delete" method="get">
                <input type="number" name="id" class="form-control mb-2" placeholder="Enter Client ID" required />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>

        <!-- View Clients Box -->
        <div class="box">
            <h3>View Clients</h3>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model)
                    {
                        <tr>
                            <td>@client.Id</td>
                            <td>@client.Name @client.LastName</td>
                            <td>@client.Email</td>
                            <td>@client.Tel</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</body>
</html>

