@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #121212; /* Dark background */
            color: #dbdbd8;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .dashboard-container {
            text-align: center;
        }

        .box {
            background: rgba(0, 0, 0, 0.6); /* Transparent box */
            padding: 40px;
            border-radius: 10px;
            width: 280px;
            text-align: center;
            margin: 20px;
            display: inline-block;
        }

        .btn-dashboard {
            background: #E50914;
            color: #dbdbd8;
            font-weight: bold;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            font-size: 18px;
        }

            .btn-dashboard:hover {
                background: #B20710;
            }
    </style>
</head>
<body>

    <div class="dashboard-container">
        <h1 class="mb-4">Admin Dashboard</h1>

        <div class="box">
            <h3>Client Management</h3>
            <a href="/Client/Index" class="btn btn-dashboard">Go to Clients</a>
        </div>

        <div class="box">
            <h3>Application Management</h3>
            <a href="/Application/Index" class="btn btn-dashboard">Go to Applications</a>
        </div>

        <div class="box">
            <h3>Subscription Management</h3>
            <a href="/Subscription/Index" class="btn btn-dashboard">Go to Subscriptions</a>
        </div>
    </div>

</body>
</html>
