@model Application

@{
    ViewData["Title"] = "Edit Application";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit Application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #121212; /* Dark background */
            color: white;
            text-align: center;
        }

        .container {
            margin-top: 50px;
        }

        .box {
            background: rgba(0, 0, 0, 0.6); /* Transparent box */
            padding: 30px;
            border-radius: 10px;
            width: 400px;
            margin: auto;
            text-align: center;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
        }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

        .btn-custom {
            background: #E50914;
            color: white;
            font-weight: bold;
            border: none;
            padding: 10px;
            border-radius: 5px;
            font-size: 16px;
            width: 100%;
        }

            .btn-custom:hover {
                background: #B20710;
            }
    </style>
</head>
<body>

    <div class="box">
        <h3>Edit Application</h3>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" /> 
            <input type="text" asp-for="ApplicationName" class="form-control mb-2" placeholder="Enter Application Name" required />
            <input type="text" asp-for="Description" class="form-control mb-2" placeholder="Enter Application Description" />
            <button type="submit" class="btn btn-custom">Save Changes</button>
        </form>
    </div>



</body>
</html>
